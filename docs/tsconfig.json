{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build/",
        "strictNullChecks": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "paths": {
            "app/*": [
                "src/*"
            ]
        },
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "include": [
        "./src/**/*",
        "./typings/**/*.ts"
    ]
}
